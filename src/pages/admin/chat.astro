---
// src/pages/admin/chat.astro
// Gesti√≥n de Chatbot

import AdminLayout from '../../components/admin/AdminLayout.svelte';
import ChatManager from '../../components/admin/chat/ChatManager.svelte';
import '../../styles/global.css';

const { localUser, staff } = Astro.locals as any;
const currentUser = staff || localUser;

if (!currentUser || (currentUser.role !== 'ADMIN' && currentUser.role !== 'DEV')) {
  return Astro.redirect('/login?redirect=/admin/chat');
}
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Chatbot | Admin - ConsigueTuVisa</title>
</head>
<body class="bg-slate-50">
  <AdminLayout client:load adminName={localUser.firstName || 'Admin'} currentPage="chat">
    <ChatManager client:load />
  </AdminLayout>
</body>
</html>
