---
// src/pages/admin/alertas.astro
// Centro de Alertas

import AdminLayout from '../../components/admin/AdminLayout.svelte';
import AlertsCenter from '../../components/admin/alerts/AlertsCenter.svelte';
import '../../styles/global.css';

const { localUser, staff } = Astro.locals as any;
const currentUser = staff || localUser;

if (!currentUser || (currentUser.role !== 'ADMIN' && currentUser.role !== 'DEV')) {
  return Astro.redirect('/login?redirect=/admin/alertas');
}
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Alertas | Admin - ConsigueTuVisa</title>
</head>
<body class="bg-slate-50">
  <AdminLayout client:load adminName={localUser.firstName || 'Admin'} currentPage="alertas">
    <AlertsCenter client:load />
  </AdminLayout>
</body>
</html>
