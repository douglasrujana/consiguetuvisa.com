---
// src/pages/admin/knowledge.astro
// Panel de administraci√≥n de Knowledge Base

import AdminLayout from '../../components/admin/AdminLayout.svelte';
import KnowledgeManager from '../../components/admin/knowledge/KnowledgeManager.svelte';
import '../../styles/global.css';

const { localUser, staff } = Astro.locals as any;
const currentUser = staff || localUser;

if (!currentUser || (currentUser.role !== 'ADMIN' && currentUser.role !== 'DEV')) {
  return Astro.redirect('/login?redirect=/admin/knowledge');
}
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Knowledge Base | Admin - ConsigueTuVisa</title>
</head>
<body class="bg-slate-50">
  <AdminLayout client:load adminName={localUser.firstName || 'Admin'} currentPage="knowledge">
    <KnowledgeManager client:load />
  </AdminLayout>
</body>
</html>
