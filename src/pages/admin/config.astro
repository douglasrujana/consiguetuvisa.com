---
// src/pages/admin/config.astro
// Configuración del sistema

import AdminLayout from '../../components/admin/AdminLayout.svelte';
import ConfigManager from '../../components/admin/config/ConfigManager.svelte';
import '../../styles/global.css';

const { localUser, staff } = Astro.locals as any;
const currentUser = staff || localUser;

if (!currentUser || (currentUser.role !== 'ADMIN' && currentUser.role !== 'DEV')) {
  return Astro.redirect('/login?redirect=/admin/config');
}
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Configuración | Admin - ConsigueTuVisa</title>
</head>
<body class="bg-slate-50">
  <AdminLayout client:load adminName={localUser.firstName || 'Admin'} currentPage="config">
    <ConfigManager client:load />
  </AdminLayout>
</body>
</html>
