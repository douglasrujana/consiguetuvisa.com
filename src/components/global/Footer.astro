---
// src/components/global/Footer.astro
import Icon from '../ui/Icon.astro';

const currentYear = new Date().getFullYear();

// Author info from environment variables
const authorName = import.meta.env.SITE_AUTHOR_NAME || 'Ing. Douglas Rujana';
const authorUrl = import.meta.env.SITE_AUTHOR_URL || 'https://www.douglasrujana.dev';
const authorGithub = import.meta.env.SITE_AUTHOR_GITHUB || 'https://github.com/douglasrujana';

const footerLinks = {
  servicios: [
    { label: 'Visa EE.UU', href: '#' },
    { label: 'Visa Canadá', href: '#' },
    { label: 'Visa Schengen', href: '#' },
    { label: 'Visa UK', href: '#' },
    { label: 'Visa México', href: '#' },
  ],
  empresa: [
    { label: 'Sobre Nosotros', href: '#' },
    { label: 'Testimonios', href: '#testimonios' },
    { label: 'Preguntas Frecuentes', href: '#faq' },
    { label: 'Contacto', href: '#contacto' },
  ],
  legal: [
    { label: 'Términos y Condiciones', href: '#' },
    { label: 'Política de Privacidad', href: '#' },
    { label: 'Aviso Legal', href: '#' },
  ],
};
---

<footer class="bg-brand-primary text-text-inverse py-12 md:py-16">
  <div class="container-main">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div>
        <h3 class="text-2xl font-bold mb-4">
          Consigue<span class="text-brand-accent">TuVisa</span>
        </h3>
        <p class="text-text-inverse/70 mb-4">
          Asesoría profesional para visas de turismo. Tu trámite en manos de expertos.
        </p>
        <div class="flex items-center gap-2 text-text-inverse/70">
          <Icon name="location" size={18} />
          <span>Quito, Ecuador</span>
        </div>
      </div>

      <!-- Servicios -->
      <div>
        <h4 class="font-semibold mb-4">Servicios</h4>
        <ul class="space-y-2">
          {footerLinks.servicios.map(link => (
            <li>
              <a href={link.href} class="text-text-inverse/70 hover:text-text-inverse transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Empresa -->
      <div>
        <h4 class="font-semibold mb-4">Empresa</h4>
        <ul class="space-y-2">
          {footerLinks.empresa.map(link => (
            <li>
              <a href={link.href} class="text-text-inverse/70 hover:text-text-inverse transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contacto -->
      <div>
        <h4 class="font-semibold mb-4">Contacto</h4>
        <ul class="space-y-3">
          <li class="flex items-center gap-2 text-text-inverse/70">
            <Icon name="phone" size={18} />
            <span>+593 99 999 9999</span>
          </li>
          <li class="flex items-center gap-2 text-text-inverse/70">
            <Icon name="mail" size={18} />
            <span>info@consiguetuvisa.com</span>
          </li>
          <li class="flex items-center gap-2 text-text-inverse/70">
            <Icon name="whatsapp" size={18} />
            <a href="https://wa.me/593999999999" class="hover:text-whatsapp transition-colors">
              WhatsApp
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-text-inverse/20 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-text-inverse/60 text-sm">
        © {currentYear} ConsigueTuVisa. Todos los derechos reservados.
      </p>
      <ul class="flex gap-6">
        {footerLinks.legal.map(link => (
          <li>
            <a href={link.href} class="text-text-inverse/60 hover:text-text-inverse text-sm transition-colors">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Developer Credits -->
    <div class="border-t border-text-inverse/10 mt-8 pt-6 text-center">
      <p class="text-text-inverse/50 text-sm flex items-center justify-center gap-2 flex-wrap">
        Sitio creado por 
        <a 
          href={authorUrl}
          target="_blank" 
          rel="noopener noreferrer"
          class="text-text-inverse/70 hover:text-text-inverse font-medium transition-colors"
        >
          {authorName}
        </a>
        <a 
          href={authorGithub}
          target="_blank" 
          rel="noopener noreferrer"
          class="text-text-inverse/50 hover:text-text-inverse transition-colors"
          aria-label="GitHub"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </p>
    </div>
  </div>
</footer>
