---
// src/components/global/Footer.astro
import Icon from '../ui/Icon.astro';

const currentYear = new Date().getFullYear();

const footerLinks = {
  servicios: [
    { label: 'Visa EE.UU', href: '#' },
    { label: 'Visa Canadá', href: '#' },
    { label: 'Visa Schengen', href: '#' },
    { label: 'Visa UK', href: '#' },
    { label: 'Visa México', href: '#' },
  ],
  empresa: [
    { label: 'Sobre Nosotros', href: '#' },
    { label: 'Testimonios', href: '#testimonios' },
    { label: 'Preguntas Frecuentes', href: '#faq' },
    { label: 'Contacto', href: '#contacto' },
  ],
  legal: [
    { label: 'Términos y Condiciones', href: '#' },
    { label: 'Política de Privacidad', href: '#' },
    { label: 'Aviso Legal', href: '#' },
  ],
};
---

<footer class="bg-brand-primary text-text-inverse py-12 md:py-16">
  <div class="container-main">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div>
        <h3 class="text-2xl font-bold mb-4">
          Consigue<span class="text-brand-accent">TuVisa</span>
        </h3>
        <p class="text-text-inverse/70 mb-4">
          Asesoría profesional para visas de turismo. Tu trámite en manos de expertos.
        </p>
        <div class="flex items-center gap-2 text-text-inverse/70">
          <Icon name="location" size={18} />
          <span>Quito, Ecuador</span>
        </div>
      </div>

      <!-- Servicios -->
      <div>
        <h4 class="font-semibold mb-4">Servicios</h4>
        <ul class="space-y-2">
          {footerLinks.servicios.map(link => (
            <li>
              <a href={link.href} class="text-text-inverse/70 hover:text-text-inverse transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Empresa -->
      <div>
        <h4 class="font-semibold mb-4">Empresa</h4>
        <ul class="space-y-2">
          {footerLinks.empresa.map(link => (
            <li>
              <a href={link.href} class="text-text-inverse/70 hover:text-text-inverse transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contacto -->
      <div>
        <h4 class="font-semibold mb-4">Contacto</h4>
        <ul class="space-y-3">
          <li class="flex items-center gap-2 text-text-inverse/70">
            <Icon name="phone" size={18} />
            <span>+593 99 999 9999</span>
          </li>
          <li class="flex items-center gap-2 text-text-inverse/70">
            <Icon name="mail" size={18} />
            <span>info@consiguetuvisa.com</span>
          </li>
          <li class="flex items-center gap-2 text-text-inverse/70">
            <Icon name="whatsapp" size={18} />
            <a href="https://wa.me/593999999999" class="hover:text-whatsapp transition-colors">
              WhatsApp
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-text-inverse/20 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-text-inverse/60 text-sm">
        © {currentYear} ConsigueTuVisa. Todos los derechos reservados.
      </p>
      <ul class="flex gap-6">
        {footerLinks.legal.map(link => (
          <li>
            <a href={link.href} class="text-text-inverse/60 hover:text-text-inverse text-sm transition-colors">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</footer>
