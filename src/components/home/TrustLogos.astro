---
// src/components/home/TrustLogos.astro
import TrustLogosCarousel from './TrustLogos.svelte';
import { getTrustLogos, type TrustLogo } from '../../lib/sanity/trustLogos.service';

interface Props {
  data?: TrustLogo[];
  autoplay?: boolean;
  autoplayDelay?: number;
}

const { data, autoplay = true, autoplayDelay = 3000 } = Astro.props;
const logos = data ?? await getTrustLogos();
---

<TrustLogosCarousel 
  client:visible 
  logos={logos} 
  autoplay={autoplay}
  autoplayDelay={autoplayDelay}
/>
