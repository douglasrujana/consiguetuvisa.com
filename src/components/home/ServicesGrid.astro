---
// src/components/home/ServicesGrid.astro
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';
import Icon from '../ui/Icon.astro';
import Button from '../ui/Button.astro';

// Usando flagcdn.com para banderas de alta calidad
const visas = [
  {
    country: 'Estados Unidos',
    flagUrl: 'https://flagcdn.com/w80/us.png',
    flagAlt: 'Bandera de Estados Unidos',
    description: 'Visa B1/B2 de turismo y negocios. Asesoría completa para DS-160.',
  },
  {
    country: 'Canadá',
    flagUrl: 'https://flagcdn.com/w80/ca.png',
    flagAlt: 'Bandera de Canadá',
    description: 'Visa de visitante. Te ayudamos con la aplicación online.',
  },
  {
    country: 'México',
    flagUrl: 'https://flagcdn.com/w80/mx.png',
    flagAlt: 'Bandera de México',
    description: 'Visa de turismo mexicana. Proceso rápido y sencillo.',
  },
  {
    country: 'Schengen',
    flagUrl: 'https://flagcdn.com/w80/eu.png',
    flagAlt: 'Bandera de la Unión Europea',
    description: 'Acceso a 27 países europeos con una sola visa.',
  },
  {
    country: 'Reino Unido',
    flagUrl: 'https://flagcdn.com/w80/gb.png',
    flagAlt: 'Bandera del Reino Unido',
    description: 'Visa de visitante UK. Asesoría especializada.',
  },
  {
    country: 'Otros Destinos',
    flagUrl: 'https://flagcdn.com/w80/un.png',
    flagAlt: 'Bandera de las Naciones Unidas',
    description: 'Australia, Nueva Zelanda, Japón y más. Consulta disponibilidad.',
  },
];
---

<Section id="servicios" background="light">
  <div class="text-center mb-12">
    <div class="accent-line mx-auto mb-4"></div>
    <h2 class="heading-section mb-4">Tipos de Visa</h2>
    <p class="text-body max-w-2xl mx-auto">
      Escoge tu destino y agenda una asesoría personalizada con nuestros expertos.
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {visas.map(visa => (
      <Card class="group">
        <div class="flex items-start gap-4">
          <img 
            src={visa.flagUrl} 
            alt={visa.flagAlt}
            width="48"
            height="36"
            loading="lazy"
            class="w-12 h-9 object-cover rounded shadow-sm flex-shrink-0"
          />
          <div class="flex-1">
            <h3 class="heading-card mb-2 group-hover:text-brand-secondary transition-colors">
              {visa.country}
            </h3>
            <p class="text-body mb-4">{visa.description}</p>
            <a 
              href="#contacto" 
              class="inline-flex items-center gap-1 text-brand-secondary font-medium hover:gap-2 transition-all"
            >
              Más información
              <Icon name="arrow" size={16} />
            </a>
          </div>
        </div>
      </Card>
    ))}
  </div>

  <div class="text-center mt-10">
    <Button href="#contacto" size="lg">
      Agenda tu Asesoría
      <Icon name="arrow" size={20} />
    </Button>
  </div>
</Section>
