---
// src/components/home/Trust.astro
import Section from '../ui/Section.astro';
import Icon from '../ui/Icon.astro';

const stats = [
  { value: '5+', label: 'Años de experiencia' },
  { value: '2,000+', label: 'Clientes atendidos' },
  { value: '97%', label: 'Satisfacción' },
  { value: '24h', label: 'Respuesta promedio' },
];

const features = [
  'Equipo certificado en trámites migratorios',
  'Atención personalizada para cada caso',
  'Seguimiento continuo de tu proceso',
  'Garantía de confidencialidad',
];
---

<Section background="white">
  <div class="grid lg:grid-cols-2 gap-12 items-center">
    <!-- Content -->
    <div>
      <div class="accent-line mb-4"></div>
      <h2 class="heading-section mb-6">¿Por qué confiar en nosotros?</h2>
      <p class="text-body mb-8">
        Somos un equipo de profesionales especializados en trámites de visa con años de experiencia 
        ayudando a ecuatorianos a cumplir su sueño de viajar.
      </p>

      <ul class="space-y-4">
        {features.map(feature => (
          <li class="flex items-start gap-3">
            <div class="w-6 h-6 bg-success/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
              <Icon name="check" size={14} class="text-success" />
            </div>
            <span class="text-text-secondary">{feature}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 gap-6">
      {stats.map(stat => (
        <div class="bg-surface-light rounded-xl p-6 text-center">
          <p class="text-4xl font-bold text-brand-secondary mb-2">{stat.value}</p>
          <p class="text-text-secondary">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</Section>
