---
// src/components/home/Benefits.astro
// Carga "¿Por qué elegirnos?" desde Sanity

import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';
import Icon from '../ui/Icon.astro';
import { getBenefits } from '../../lib/sanity/benefits.service';

const data = await getBenefits();
---

<Section background="white">
  <div class="text-center mb-12 animate-on-scroll fade-up">
    <div class="accent-line mx-auto mb-4"></div>
    <h2 class="heading-section">{data.title}</h2>
    {data.subtitle && <p class="text-body mt-4">{data.subtitle}</p>}
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {data.items.map((benefit, index) => (
      <Card class={`text-center hover-lift animate-on-scroll fade-up delay-${index + 1}`}>
        <div class="w-14 h-14 bg-brand-secondary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
          <Icon name={benefit.icon || 'star'} size={28} class="text-brand-secondary" />
        </div>
        <h3 class="heading-card mb-2">{benefit.title}</h3>
        <p class="text-body">{benefit.description}</p>
      </Card>
    ))}
  </div>
</Section>
