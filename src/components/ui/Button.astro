---
// src/components/ui/Button.astro
interface Props {
  variant?: 'primary' | 'secondary' | 'whatsapp';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  target?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  href, 
  class: className = '',
  target 
} = Astro.props;

const variants = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  whatsapp: 'btn-whatsapp',
};

const sizes = {
  sm: 'btn-sm',
  md: '',
  lg: 'btn-lg',
};

const classes = `btn ${variants[variant]} ${sizes[size]} ${className}`;
const Tag = href ? 'a' : 'button';
---

{href ? (
  <a href={href} class={classes} target={target}>
    <slot />
  </a>
) : (
  <button class={classes}>
    <slot />
  </button>
)}
