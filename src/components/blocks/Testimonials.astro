---
// src/components/blocks/Testimonials.astro

import type { TestimonialsBlock } from '@server/lib/features/page/Page.entity';
import { urlFor } from '@server/lib/adapters/cms';

interface Props extends TestimonialsBlock {}

const { title, items } = Astro.props;
---

<section class="testimonials">
  <div class="testimonials__container">
    {title && <h2 class="testimonials__title">{title}</h2>}
    
    <div class="testimonials__grid">
      {items?.map((item) => (
        <div class="testimonial-card">
          <blockquote class="testimonial-card__quote">
            "{item.quote}"
          </blockquote>
          <div class="testimonial-card__author">
            {item.avatar && (
              <img 
                src={urlFor(item.avatar).width(80).height(80).url()} 
                alt={item.author}
                class="testimonial-card__avatar"
              />
            )}
            <div>
              <p class="testimonial-card__name">{item.author}</p>
              {item.role && <p class="testimonial-card__role">{item.role}</p>}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    padding: 5rem 2rem;
    background-color: white;
  }

  .testimonials__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonials__title {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    color: var(--color-gray-900, #1a202c);
    text-align: center;
    margin-bottom: 3rem;
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background: var(--color-gray-50, #f7fafc);
    padding: 2rem;
    border-radius: 1rem;
    border-left: 4px solid var(--color-primary-500, #3182ce);
  }

  .testimonial-card__quote {
    font-size: 1.125rem;
    color: var(--color-gray-700, #4a5568);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .testimonial-card__author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .testimonial-card__avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    object-fit: cover;
  }

  .testimonial-card__name {
    font-weight: 600;
    color: var(--color-gray-900, #1a202c);
  }

  .testimonial-card__role {
    font-size: 0.875rem;
    color: var(--color-gray-500, #a0aec0);
  }
</style>
