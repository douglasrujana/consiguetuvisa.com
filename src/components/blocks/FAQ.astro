---
// src/components/blocks/FAQ.astro

import type { FAQBlock } from '@server/lib/features/page/Page.entity';

interface Props extends FAQBlock {}

const { title, items } = Astro.props;
---

<section class="faq">
  <div class="faq__container">
    {title && <h2 class="faq__title">{title}</h2>}
    
    <div class="faq__list">
      {items?.map((item, index) => (
        <details class="faq-item" open={index === 0}>
          <summary class="faq-item__question">
            {item.question}
            <span class="faq-item__icon">+</span>
          </summary>
          <p class="faq-item__answer">{item.answer}</p>
        </details>
      ))}
    </div>
  </div>
</section>

<style>
  .faq {
    padding: 5rem 2rem;
    background-color: white;
  }

  .faq__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq__title {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    color: var(--color-gray-900, #1a202c);
    text-align: center;
    margin-bottom: 3rem;
  }

  .faq__list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: var(--color-gray-50, #f7fafc);
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .faq-item__question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    font-weight: 600;
    color: var(--color-gray-900, #1a202c);
    cursor: pointer;
    list-style: none;
  }

  .faq-item__question::-webkit-details-marker {
    display: none;
  }

  .faq-item__icon {
    font-size: 1.5rem;
    color: var(--color-primary-500, #3182ce);
    transition: transform 0.2s;
  }

  .faq-item[open] .faq-item__icon {
    transform: rotate(45deg);
  }

  .faq-item__answer {
    padding: 0 1.5rem 1.25rem;
    color: var(--color-gray-600, #718096);
    line-height: 1.7;
  }
</style>
