---
// src/components/blocks/Pricing.astro

import type { PricingBlock } from '@server/lib/features/page/Page.entity';

interface Props extends PricingBlock {}

const { title, subtitle, plans } = Astro.props;
---

<section class="pricing">
  <div class="pricing__container">
    {(title || subtitle) && (
      <div class="pricing__header">
        {title && <h2 class="pricing__title">{title}</h2>}
        {subtitle && <p class="pricing__subtitle">{subtitle}</p>}
      </div>
    )}
    
    <div class="pricing__grid">
      {plans?.map((plan) => (
        <div class:list={['pricing-card', { 'pricing-card--highlighted': plan.highlighted }]}>
          {plan.highlighted && <span class="pricing-card__badge">Recomendado</span>}
          <h3 class="pricing-card__name">{plan.name}</h3>
          <p class="pricing-card__price">{plan.price}</p>
          {plan.description && <p class="pricing-card__description">{plan.description}</p>}
          
          <ul class="pricing-card__features">
            {plan.features?.map((feature) => (
              <li>âœ“ {feature}</li>
            ))}
          </ul>
          
          <a href={plan.ctaUrl} class="pricing-card__cta">
            {plan.ctaText}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .pricing {
    padding: 5rem 2rem;
    background-color: var(--color-gray-50, #f7fafc);
  }

  .pricing__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .pricing__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .pricing__title {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    color: var(--color-gray-900, #1a202c);
    margin-bottom: 0.5rem;
  }

  .pricing__subtitle {
    font-size: 1.125rem;
    color: var(--color-gray-600, #718096);
  }

  .pricing__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    align-items: start;
  }

  .pricing-card {
    position: relative;
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    text-align: center;
  }

  .pricing-card--highlighted {
    border: 2px solid var(--color-primary-500, #3182ce);
    transform: scale(1.05);
  }

  .pricing-card__badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary-500, #3182ce);
    color: white;
    padding: 0.25rem 1rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .pricing-card__name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-gray-900, #1a202c);
    margin-bottom: 0.5rem;
  }

  .pricing-card__price {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary-600, #2b6cb0);
    margin-bottom: 0.5rem;
  }

  .pricing-card__description {
    color: var(--color-gray-600, #718096);
    margin-bottom: 1.5rem;
  }

  .pricing-card__features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    text-align: left;
  }

  .pricing-card__features li {
    padding: 0.5rem 0;
    color: var(--color-gray-700, #4a5568);
    border-bottom: 1px solid var(--color-gray-100, #edf2f7);
  }

  .pricing-card__cta {
    display: block;
    padding: 1rem;
    background: var(--color-primary-500, #3182ce);
    color: white;
    font-weight: 600;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background 0.2s;
  }

  .pricing-card__cta:hover {
    background: var(--color-primary-600, #2b6cb0);
  }
</style>
